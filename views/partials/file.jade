div(class="row")
  div(class="twelve columns")
    div(class="card")
      div(class="card-header")
        p File \#{{file.key}}

      div(class="card-content")
        dl
          dt(ng-show="file.description") Description 
          dd(ng-show="file.description") {{ file.description }}

          dt Created at 
          dd {{ file.createdAt | date:'yyyy-mm-dd H:mm' }}

          dt MD5 digest 
          dd {{ file.md5Digest }}

          dt SHA-1 digest 
          dd {{ file.sha1Digest }}

    a(href="files/{{ file.key }}/download", target="_self", class="button button-primary u-full-width") Open file
